</head>

<body>
    {{!-- arquivo com a cabeçalho e rodapé fixos das páginas --}}
    <nav class="navbar navbar-expand-lg navbar-dark navbarRed">
        <div class="container-fluid">
           {{!- <a class="navbar-brand" href="/">Projeto Sanguessuga</a> --}}
           <a class="navbar-brand" href="/"><img class="imgheader" src="/img/header.png" alt=""></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Como doar</a>
                    </li>
                    {{#if (verificaLogin session.user) }}
                    <li class="nav-item">
                        <a class="nav-link" href="/cadastro">Cadastre-se</a>
                    </li>
                    {{else}}
                        {{#if session.user.isAdmin}}
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/index">Console Admin</a>
                        </li>
                        {{else}}
                        <a href="/perfil/{{session.user.id}}" class="nav-link">Meu Perfil <i class="fas fa-user"></i></a>
                        {{/if}}
                    {{/if}}

                    <li class="nav-item">
                        <a class="nav-link" href="/sobre">Sobre</a>
                    </li>
                </ul>
                <form class="justify-content-end">
                    {{#if (verificaLogin session.user) }}
                    <a href="/login" class="btn btn-outline-light">Entrar</a>
                    {{else}}
                    <a href="/sair" class="btn btn-outline-light">Sair <i class="fas fa-sign-out-alt"></i></a>
                    {{/if}}
                </form>
            </div>
        </div>
    </nav>
    
    {{{body}}}
    
    <script src="/js/jquery.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/bootstrap4-5.js"></script>
    <script src="/js/mascaras.js"></script>
    <script src="/js/verifica-cpf.js"></script>
</body>

</html>