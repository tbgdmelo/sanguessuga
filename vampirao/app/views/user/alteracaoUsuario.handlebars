<title>{{titulo}}</title>

<div class="container mt-5">
    <form action="/atualizar/{{id}}" method="post">
        <div class="card shadow-sm ">
            <input hidden="true" name="id" id="id" type="text" value="{{id}}">
            <input hidden="true" name="pontuacao" id="pontuacao" type="text" value="{{pontuacao}}">
            <div class="card-body">
                <h4 class="card-title">Atualize seu cadastro</h4>
                <div class="form-control p-4 mt-3">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <div class="form-group">
                                <span class="required">* <label>Nome</label></span>
                                <input value="{{nome}}" name="nome" id="nome" type="text" class="form-control"
                                    minlength="2" maxlength="50" required>
                                <span class="alert-danger">{{printError errors 'nome'}}</span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <span class="required">* <label>Sobrenome:</label></span>
                                <input value="{{sobrenome}}" name="sobrenome" id="sobrenome" type="text"
                                    class="form-control" minlength="2" maxlength="50" required>
                                <span class="alert-danger">{{printError errors 'sobrenome'}}</span>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <span class="required">* <label>CPF:</label></span>
                                <input readonly disabled value="{{cpf}}" name="cpf"
                                    onkeypress="$(this).mask('000.000.000-00');" id="cpf" type="text"
                                    class="form-control" maxlength="11" minlength="11">
                                <span class="alert-danger">{{printErrorCPF errors 'cpf'}}</span>
                                {{!--<span class="alert-link" id="resposta"></span> --}}
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="form-group">
                                <span class="required">* <label>Data de Nascimento:</label></span>
                                <input readonly disabled value="{{nascimento}}" name="nascimento" id="nascimento"
                                    type="text" class="form-control"
                                    onfocus="(this.type='date'),$(this).mask('00/00/0000')" onblur="(this.type='text')">
                                <span class="alert-danger">{{printErrorNascimento errors}}</span>
                            </div>
                        </div>


                        <div class="col-md-4">
                            <div class="form-group mt-3">
                                <span class="required">* <label>Email:</label></span>
                                <input value="{{email}}" name="email" id="email" type="email" minlength="4"
                                    maxlength="254" class="form-control" required>
                                <span class="alert-danger">{{printError errors 'email'}}</span>
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="form-group mt-3">
                                <label>Telefone celular:</label>
                                <input value="{{telefone}}" name="telefone" onkeypress="$(this).mask('(00) 0000-00009')"
                                    id="telefone" minlength="15" maxlength="15" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group mt-3">
                                <span class="required">* <label>Senha:</label></span>
                                <input name="senha" type="password" id="senha" minlength="8" class="form-control"
                                    required>
                                <span class="alert-danger">{{printError errors 'senha'}}</span>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group mt-3">
                                <span class="required">* <label>Confirmação de senha:</label></span>
                                <input name="confSenha" minlength="8" id="confSenha" type="password"
                                    class="form-control">
                            </div>
                        </div>

                        <div class="">
                            <div class="form-group mt-3">
                                <span class="required">* <label>Tipo Sanguíneo:</label></span>
                                <div class="row">
                                    <div class="col">
                                        {{#each sangues}}

                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="id_sangue" id="id_sangue"
                                                value={{id}} required>
                                            <label class="form-check-label">{{tipo}}</label>
                                        </div>

                                        {{/each}}
                                    </div>

                                </div>
                            </div>
                            <span class="alert-danger">{{printError errors 'id_sangue'}}</span>
                        </div>
                    </div>
                    <br />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center mb-2">
                        <button class="btn btn-outline-primary me-md-2" type="submit">Atualizar</button>
                        <a href="/" class="btn btn-outline-secondary">Cancelar</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<script src="/js/confirmacao-senha.js"></script>