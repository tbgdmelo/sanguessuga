<title>Minhas Doações</title>

<div class="container">
    <br />
    <h3>Doação Agendada</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Centro</th>
                <th scope="col">Data</th>
                <th scope="col">Hora</th>
            </tr>
        </thead>
        <tbody>
            {{#each doacoes}}
                {{#if agendado}}
                <tr>
                    <th scope="row">{{nomeCentro id_centro @root.centros}}</th>
                    <td>{{formatarData data}}</td>
                    <td>{{hora}}</td>
                </tr>
                {{/if}}
            {{/each}}
        </tbody>
    </table>
    <br />
    <h3>Doações Realizadas</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Centro</th>
                <th scope="col">Data</th>
                <th scope="col">Hora</th>
            </tr>
        </thead>
        <tbody>
            {{#each doacoes}}
                {{#unless agendado}}
                <tr>
                    <th scope="row">{{nomeCentro id_centro @root.centros}}</th>
                    <td>{{formatarData data}}</td>
                    <td>{{hora}}</td>
                </tr>
                {{/unless}}
            {{/each}}
        </tbody>
    </table>
</div>