<title>{{titulo}}</title>
<div class="container mt-4">
    {{!-- FORMULARIO DE CADASTRO DE USUÁRIO --}}
    <form action='/cadastro' method="post" >
        <h2>Formulário de Cadastro</h2>
        <div class="row g-3">
            <div class="col-md-6">
                <div class="form-group mt-4">
                    <label>Nome</label>
                    <input value="{{user.nome}}" name="nome" id="nome" type="text" class="form-control" placeholder="Digite seu nome..." minlength="2" maxlength="50" required>
                    <span class="alert-danger">{{printError errors 'nome'}}</span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group mt-4">
                    <label>CPF:</label>
                    <input value="{{user.cpf}}" name="cpf" onkeypress="$(this).mask('000.000.000-00');" id="cpf" type="text" class="form-control" maxlength="11" minlength="11" placeholder="Não utilize pontos e traços" required>
                    <span class="alert-danger">{{printErrorCPF errors 'cpf'}}</span>
                    {{!--<span class="alert-link" id="resposta"></span> --}}
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label>Sobrenome:</label>
                    <input value="{{user.sobrenome}}" name="sobrenome" id="sobrenome" type="text" class="form-control" minlength="2" maxlength="50" placeholder="Digite seu sobrenome..." required>
                    <span class="alert-danger">{{printError errors 'sobrenome'}}</span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label>Data de Nascimento:</label>
                    <input name="nascimento" id="nascimento" type="date" class="form-control" required>
                    <span class="alert-danger">{{printErrorNascimento errors}}</span>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group mt-3">
                <label>Email:</label>
                <input value="{{user.email}}" name="email" id="email" type="email" minlength="4" maxlength="254" class="form-control" placeholder="Digite seu email..." required>
                
                <span class="alert-danger">{{printError errors 'email'}}</span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group mt-3">
                <label>Telefone celular:</label>
                <input value="{{user.telefone}}" name="telefone" onkeypress="$(this).mask('(00) 0000-00009')" id="telefone" minlength="15" maxlength="15" type="text" class="form-control">
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group mt-3">
                <label>Senha:</label>
                <input name="senha" type="password" id="senha" minlength="8" class="form-control">
                <span class="alert-danger">{{printError errors 'senha'}}</span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group mt-3">
                <label>Confirmação de senha:</label>
                <input name="confSenha" minlength="8" id="confSenha" type="password" class="form-control">
            </div>
        </div>

        
        <div class="col-md-4">
            <div class="form-group mt-3">
                <label>Tipo Sanguíneo:</label>
                <div class="row">
                    <div class="col">
                        {{#each sangues}}

                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="id_sangue" id="id_sangue" value={{id}}>
                            <label class="form-check-label">{{tipo}}</label>
                        </div>
                        
                        {{/each}}
                    </div>
                    
                </div>
            </div>
            <span class="alert-danger">{{printError errors 'id_sangue'}}</span>
        </div>

        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
            <button class="btn btn-success me-md-2" type="submit">Cadastrar</button>
            <a href="/" class="btn btn-danger">Cancelar</a>
        </div>
    <br/>
    </form>
</div>

<script src="/js/confirmacao-senha.js"></script>


