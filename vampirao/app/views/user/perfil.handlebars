<title>{{titulo}}</title>
<br />
<script>
    function ClickBotao2() {
        document.getElementById("mybutton").click();
    }
</script>

<body onload={{modal}}>
    <div class="container">
        <br>
        <div class="row">
            <div class="col-md-6">
                <h5> Bem vindo(a) {{nome}} {{sobrenome}}</h5>
            </div>
            <div class="col-md-6">
                <div class="d-flex justify-content-end">
                    <h5> Sua pontuação: {{pontuacao}}</h5>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-md-6">
                    <p><i class="fas fa-tint"></i> Tipo Sanguíneo: {{tipoSanguineo}}</p>
                </div>
            </div>
        </div>

        <br>
        <div class="row row-cols-1 row-cols-md-4 g-5">
            <div class="col">
                <div class="card shadow">
                    <a href="/doacoes/{{id}}" class="a-perfil">
                        <div class="card-perfil">
                            <div class="card-body">
                                <h5 class="card-title">Minhas doações</h5>
                                <i class="fas fa-hand-holding-medical"></i>
                            </div>
                        </div>
                    </a>
                </div>
            </div>

            <div class="col">
                <div class="card shadow">
                    <a href="/centros/index" class="a-perfil">
                        <div class="card-perfil">
                            <div class="card-body">
                                <h5 class="card-title">Centros de doação</h5>
                                <i class="fas fa-hospital-alt"></i>
                            </div>
                        </div>
                    </a>
                </div>
            </div>

            <div class="col">
                <div class="card shadow">
                    <a href="/campanhas" class="a-perfil">
                        <div class="card-perfil">
                            <div class="card-body">
                                <h5 class="card-title">Campanhas</h5>
                                <i class="fas fa-first-aid"></i>
                            </div>
                        </div>
                    </a>
                </div>
            </div>

            <div class="col">
                <div class="card shadow">
                    <a href="/recompensas" class="a-perfil">
                        <div class="card-perfil">
                            <div class="card-body">
                                <h5 class="card-title">Recompensas</h5>
                                <i class="fas fa-trophy"></i>
                            </div>
                        </div>
                    </a>
                </div>
            </div>

        </div>
    </div>


    <!-- Button trigger modal -->
    <button hidden="true" id="mybutton" type="button" class="btn btn-primary" data-toggle="modal"
        data-target="#exampleModal">
        Launch demo modal
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Dados Atualizados com sucesso!</h5>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>
</body>