<title>Atualizar Estoque</title>
<div class="container mt-5">
    <div class="row justify-content-between">
        <div class="col-md-8">
            <h4>Estoques</h4>
        </div>
        <div class="col-md-1">
            <a href="/admin/index" class="btn btn-outline-secondary">voltar</a>
        </div>
    </div>
    <div class="table-responsive mt-3">
        <table class="table shadow-sm table-red">
            <thead class="thead-red">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    {{#each centros}}
                    <th scope="row">{{id}}</th>
                    <td>{{nome}}</td>
                    <td class="options text-center  ">
                        <a href="/admin/estoques/update/{{id}}"><i class="fas fa-edit" style="color: #006625;"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>