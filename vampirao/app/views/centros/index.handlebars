<title>{{titulo}}</title>
 
 <!doctype html>
<html lang="en">
  <body>
    <main role="main">

      <section class="text-center">
        <div class="container">
          <h1 class="jumbotron-heading">Centros de Doação</h1>
          <p class="lead text-muted">Visualize o banco de sangue dos centros e agende sua doação.</p>
        </div>
      </section>

      <div class="album py-5 bg-light">
        <div class="container">
          <div class="row">
          {{#each centros}}
            <div class="col-md-4">
              <div class="card mb-4 shadow-sm">
                <img class="card-img-top" src="/img/centros/{{nome}}.png" alt="{{nome}}">
                <div class="card-body">
                  <p class="card-text"><strong>{{nome}}</strong></p>
                  <p class="card-text">Endereço: {{endereco}}</p>
                  <p class="card-text">Telefone: {{telefone}}</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-outline-primary">Agendar doação</button>
                      <button type="button" class="btn btn-sm btn-outline-primary">Banco de Sangue</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
          
        </div>
      </div>
    </main>
